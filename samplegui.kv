                        size_hint: .2, 1
                        font_size: 26
                        text: "Logout"
                        on_release: app.root.current = "log"
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        color: 0, 0, 0, 1

                    Button:
                        font_size: 26
                        text: "Edit"
                        disabled: True
                        background_normal: ''
                        background_color: .85, .87, .87, 0
