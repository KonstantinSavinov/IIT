                    Label:
                        size_hint: .2, 1
                        font_size: 26
                        text: "Search:"
                        color: 0, 0, 0, 1

                    TextInput:
                        size_hint_x: .5
                        background_normal: ''
                        background_color: (1,1,1,1)
                        border: 0, 0, 0, 0
                        id: search
                        write_tab: False
                        multiline: False
                        on_text_validate: root.foo()
                        font_size: 26

                Button:
                    size_hint: 1, 0.05
                    font_size: 26
                    text: "Edit"
                    disabled: True
                    background_normal: ''
                    background_color: .85, .87, .87, 0
                    color: .85, .87, .87, 0

                GridLayout:
                    size_hint: 1, None
                    height: 55
                    cols: 3


                    Label:
                        text: "ID"
                        font_size: 20
                        color: 0, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: "Last Name"
                        font_size: 20
                        color: 0, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        text: "First Name"
                        font_size: 20
                        color: 0, 0, 0, 1
                        canvas.before:
                            Color:
                                rgba: (1, 1, 1, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size

                ScrollView:
                    BoxLayout:
                        orientation: "vertical"
                        RecycleView:
                            viewclass: 'SelectableButton'
                            data: [{'text': str(x)} for x in root.data_items]
                            SelectableRecycleGridLayout:
                                cols: 3
                                default_size: None, 95
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'vertical'
                                multiselect: True
                                touch_multiselect: True


            BoxLayout:
                orientation: "vertical"
                size_hint: 0.25, 1
                spacing: 30


                Button:
                    size_hint_y: .2
                    font_size: 26
                    text: "Add Employee"
