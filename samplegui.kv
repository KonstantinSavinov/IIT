<TestWidget@GridLayout>:
    pos: 100, 100
    size: 100, 100
    cols: 3
    rows: 3
    on_parent:
        if not self.children: [self.add_widget(Button(text=str(i))) for i in range(1, 10)]


<LoginP>:
    name: "log"
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.2, 0.4
        pos_hint: {"x": 0.37, "y": 0.43}
        canvas:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'logo.png'


    BoxLayout:
        id: login_layout
        orientation: 'vertical'

        padding: [10]
        spacing: 10
        size_hint: 0.3, 0.2
        pos_hint: {'x': .33 ,'y': .2}
        TextInput:
            id: login
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
            hint_text: "Username"
            font_size: 28


        TextInput:
            id: password
            password:True
            write_tab: False
            multiline: False
            on_text_validate: root.foo()
            hint_text: "Password"
            font_size: 28

        Button:
            on_release: root.check_attempt()
            text: "Login"
            font_name: 'Arial'
            font_size: 28


<MainMenu>:
